{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "baseUrl": "./",
    "declaration": true,
    "composite": true,
    "strict": true,
    "strictNullChecks": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@olympus-banking/dtos": ["shared/dtos"],
      "@olympus-banking/schemas": ["shared/schemas"]
    },
  },
  "exclude": ["node_modules", "dist"],
  "references": [
    { "path": "apps/plutus" },
    { "path": "apps/hermes" },
    { "path": "shared/schemas" },
    { "path": "shared/dtos" }
  ]
}
